{
  "extends": "@whatasoda/tsconfig",
  "compilerOptions": {
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "rootDir": "./",
    "module": "commonjs",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "decls": ["src/decls.ts", "src/decls.base.ts"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
